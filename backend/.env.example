# Passive CAPTCHA Backend Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
HOST=0.0.0.0
PORT=5003
FLASK_ENV=production
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///passive_captcha_production.db

# Redis Configuration (Optional - will use in-memory if not provided)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-32chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-64chars
ADMIN_SECRET=admin123
ADMIN_EMAIL=admin@passive-captcha.com

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ML Model Configuration
MODEL_PATH=models/passive_captcha_rf.pkl
SCALER_PATH=models/passive_captcha_rf_scaler.pkl
CONFIDENCE_THRESHOLD=0.6

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=1000
ENABLE_RATE_LIMITING=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# Frontend Configuration
SERVE_FRONTEND=true
API_BASE_URL=http://localhost:5003

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_URL=ws://localhost:5003

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10

# External Services (Optional)
GEOIP_DATABASE_PATH=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Production URLs (for deployment)
RENDER_EXTERNAL_URL=
