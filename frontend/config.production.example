# Production Environment Configuration for Frontend
# Copy this file to .env.production and update the values

# API Configuration
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# Application Information
VITE_APP_NAME=Passive CAPTCHA Admin
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=Advanced ML-powered CAPTCHA analytics dashboard

# Feature Flags
VITE_ENABLE_WEBSOCKET=true
VITE_ENABLE_REAL_TIME_LOGS=true
VITE_ENABLE_ML_METRICS=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_SETTINGS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_REFRESH_INTERVAL=30000
VITE_CHART_ANIMATION=true

# Performance
VITE_CHUNK_SIZE_WARNING_LIMIT=500
VITE_ENABLE_PWA=false

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Build Configuration
NODE_ENV=production