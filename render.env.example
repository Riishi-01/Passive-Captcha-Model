# Render.com Environment Variables Configuration
# Copy these to your Render.com service environment variables dashboard

# ===========================================
# BACKEND SERVICE ENVIRONMENT VARIABLES
# ===========================================

# Flask Configuration
FLASK_ENV=production
PORT=5000

# ML Model Configuration
MODEL_PATH=models/passive_captcha_rf.pkl
SCALER_PATH=models/passive_captcha_rf_scaler.pkl
CONFIDENCE_THRESHOLD=0.6

# Database Configuration
# Option 1: SQLite (Starter/Free tier)
DATABASE_URL=sqlite:///passive_captcha.db

# Option 2: PostgreSQL (Recommended for production)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name
# Example: postgresql://user:pass@localhost/passive_captcha

# Security Keys (IMPORTANT: Generate secure values in Render.com)
# Use "Generate Value" option in Render.com dashboard
SECRET_KEY=<GENERATE_IN_RENDER>
ADMIN_SECRET=<GENERATE_IN_RENDER>

# Rate Limiting & CORS
RATE_LIMIT_REQUESTS=100
ALLOWED_ORIGINS=*

# ===========================================
# FRONTEND STATIC SITE CONFIGURATION
# ===========================================

# Backend API URL (Update after backend deployment)
VITE_API_URL=https://passive-captcha-backend.onrender.com

# Build Configuration
NODE_ENV=production
GENERATE_SOURCEMAP=false 